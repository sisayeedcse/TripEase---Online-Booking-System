{
    "name": "tripease/booking-system",
    "description": "TripEase - Online Booking System for Boats and Rooms",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "TripEase\\": "includes/",
            "TripEase\\Config\\": "config/"
        },
        "files": [
            "config/config.php",
            "config/database.php",
            "includes/Auth.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite 'Unit Tests'",
        "test-integration": "phpunit --testsuite 'Integration Tests'",
        "test-coverage": "phpunit --coverage-html tests/coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
